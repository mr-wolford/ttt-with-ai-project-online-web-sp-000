#!/usr/bin/env ruby

require_relative '../config/environment'

def game_start
  puts "\nWelcome to Tic Tac Toe!"
  puts "\nPlease choose your player mode:

  0 - Computer VS Computer
  1 - Single Player
  2 - Two Player
  \n"

  game_type = gets.strip

  if game_type == "1"
    puts "Do you want to go first? [y,n]"
    if gets.strip == "y"
      Game.new(Players::Human.new("X"), Players::Computer.new("O"), Board.new).play
    else Game.new(Players::Computer.new("X"), Players::Human.new("O"), Board.new).play
    end

  elsif game_type == "0"
    Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new).play

  elsif game_type == "2"
    Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new).play
  end
  puts "That was fun! Would you like to play again? [y/n]"

end


game_start until gets.strip == "n"
